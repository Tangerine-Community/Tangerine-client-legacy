{
  "name": "tangerine",
  "version": "4.0.0",
  "description": "data collection system.",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd scripts && ./postinstall.sh",
    "build:apk": "cordova build android 2>&1",
    "test": "grunt test",
    "clean": "rm -rf platforms plugins node_modules",
    "listen": "cd scripts ./listen.rb",
    "start": "http-server -p 9000 src --silent & cd ./scripts && ./listen.rb & grunt watch",
    "testW": "http-server -p 9000 --silent & ./scripts/listen.rb  & grunt coffeeW",
    "testWatch": "http-server -p 9000 --silent & ./scripts/listen.rb  & grunt testWatch",
    "testInBrowser":"http-server ./ -p 9000 --silent"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Tangerine-Community/Tangerine-client.git"
  },
  "author": "RTI International <ict-admin@rti.org>",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/Tangerine-Community/Tangerine/issues"
  },
  "homepage": "https://github.com/Tangerine-Community/Tangerine-client",
  "devDependencies": {
    "coffee-script": "^1.9.3",
    "cordova": "^5.2.0",
    "grunt": "^0.4.5",
    "grunt-contrib-coffee": "^0.13.0",
    "grunt-contrib-handlebars": "^0.10.1",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-mocha-phantomjs": "^2.0.0",
    "http-server": "^0.8.0",
    "shelljs": "^0.4.0"
  }
}
